@{
    ViewData["Title"] = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/cart.css" />
</head>

<div class="parent-cart-div">

    <div class="cart-div" id="cart-id">
        
    </div>

    <br />
    <button class="check-out-button">Check out</button>
    <input id="total-price" placeholder="hdfauffawfa" class="total-price-input" value=""/>
</div>

<script>

    var cart_array = []

    $.ajax({
        type: "GET",
        url: "https://localhost:7034/api/Cart/GetUserCartItems?" +
                                                               "email=" +
                                                                sessionStorage.getItem("email_input"),
        dataType: "JSON",
        success: function (data) {

            console.log(data)

            for (var i = 0; i < data.length; i++) {

                $.ajax({
                    type: "GET",
                    url: "https://localhost:7034/api/Item/GetItemById?" +
                                                                    "id=" +
                                                                    data[i].itemId,
                    dataType: "JSON",
                    success: function (response) {

                        cart_array = response
                        buildCartDivs(cart_array)
                        console.log(response)
                    }
                })
            }
        }        
    })

    function buildCartDivs(data) {
        var body = document.getElementById('cart-id')

        for (var i = 0; i < data.length; i++) {
            var div = `
                        <div class="items-div">
                            <div>
                                <h2>Items</h2>
                                <hr />
                                <input id="item-id" value="${data[i].itemName}"/>
                            </div>

                            <div>
                                <h2>Qty</h2>
                                <hr class="qty-hr"/>
                                <input class="qty-id" value="${data[i].itemUnitSize}"/>
                            </div>

                            <div>
                                <h2>Price</h2>
                                <hr class="qty-hr"/>
                                <input class="qty-id" id="price-id" value="${data[i].itemPrice}$"/>
                            </div>
                        </div>`

            body.innerHTML += div

            function myFunction() {
                var price = data[i].itemPrice
                var total = +price;
                document.getElementById("totalPrice").innerHTML = total;
            }
        }
    }

</script>